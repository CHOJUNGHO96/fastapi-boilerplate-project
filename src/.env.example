# JWT Configuration
# IMPORTANT: Secret keys must be at least 32 characters long for security
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_ALGORITHM=HS256
JWT_ACCESS_SECRET_KEY=your-super-secret-key-min-32-chars-replace-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-min-32-chars-replace-this
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=3000

# CORS Configuration
# Example: BACKEND_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# For development only, you can use: http://localhost:3000
# NEVER use "*" in production
BACKEND_CORS_ORIGINS=http://localhost:3000

# PostgreSQL Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_DB=your-database
POSTGRES_SCHEMA=public

# Redis Configuration
REDIS_SERVER=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_EXPIRE_TIME=86400